label-unfocused-foreground = #ffffff
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = #cbd1cd
label-visible-foreground = #1e1e20
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = #BA2922
label-urgent-padding = 2

